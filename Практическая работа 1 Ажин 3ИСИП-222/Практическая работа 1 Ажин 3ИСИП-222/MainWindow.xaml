<Window x:Class="MathFunctionsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Практическая работа 1" Height="400" Width="525" Closing="Window_Closing">
    <Grid>
      
        <Image Name="FunctionImage" Width="200" Height="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>

      
        <TextBlock Text="x =" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,170,0,0" FontSize="14" />
        <TextBox Name="xValueTextBox" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,170,0,0"
                 ToolTip="Введите значение переменной x"/>

      
        <TextBlock Text="q =" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="150,170,0,0" FontSize="14" />
        <TextBox Name="qValueTextBox" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,170,0,0"
                 ToolTip="Введите значение переменной q"/>

       
        <RadioButton Name="shRadioButton" Content="sh(x)" Width="60" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,200,0,0"
                     ToolTip="Гиперболический синус"/>
        <RadioButton Name="x2RadioButton" Content="x²" Width="60" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,200,0,0"
                     ToolTip="Квадрат x"/>
        <RadioButton Name="eRadioButton" Content="e^x" Width="60" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,200,0,0"
                     ToolTip="Экспонента e^x"/>

      
        <Button Name="CalculateButton" Content="Вычислить" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,240,0,0" Click="CalculateButton_Click"
                ToolTip="Нажмите для вычисления"/>
        <Button Name="ClearButton" Content="Очистить" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,240,0,0" Click="ClearButton_Click"
                ToolTip="Очистить поля"/>

     
        <TextBlock Text="Ответ:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,280,0,0" FontSize="14" />
        <TextBox Name="ResultTextBox" Width="200" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,280,0,0" IsReadOnly="True"
                 ToolTip="Результат вычислений"/>
        <Image Margin="0,0,10,235" Source="/Image4.png" Stretch="Fill"/>
    </Grid>
</Window>
